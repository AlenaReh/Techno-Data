<article>
  <a href="/dashboard" class="is-pulled-right">Back To Dashboard</a>
  <h2 class="title mt-5">Edit Post</h2><hr>
  <form class="edit">
    <div>
      <label for="title">Title:</label>
      <input class="input" name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
      <label for="text">Text:</label>
      <input class="textarea" name="text" type="text" value="{{post.text}}" />
    </div>
    <div class="is-pulled-right">
       Post was written on {{format_date post.date_created}}
    
      <a href="/post/{{post.id}}"></a>
    </div>
    <button type="submit" class="button is-success">Save</button>
    <button type="submit" class="button is-danger delete-btn">Delete</button>
  </form>
</article>

<div class="comments">
  {{#each this}}
  <section class="comment-content">
    <div class="meta">
      {{user.name}} on {{format_date date_created}}
    </div>
    <div class="text">
      {{comment}}
    </div>
  </section>
  {{/each}}
</div>


<script src="/js/deletePost.js"></script>
<script src="/js/editPost.js"></script>

